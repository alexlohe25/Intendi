<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AjustesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tituloAjustes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Ajustes de usuario"
            android:textColor="#023047"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.092" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatarAjustes"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloAjustes"
            app:layout_constraintVertical_bias="0.092"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            app:srcCompat="@drawable/dogge"
            app:strokeColor="#ACABAB"
            app:strokeWidth="5dp" />

        <TextView
            android:id="@+id/line"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="275dp"
            android:layout_height="2dp"
            android:layout_below="@id/avatarAjustes"
            android:background="#000"
            android:gravity="center_horizontal"
            android:paddingTop="5dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarAjustes"
            app:layout_constraintVertical_bias="0.07" />

        <EditText
            android:id="@+id/usernameAjustes"
            android:layout_width="257dp"
            android:layout_height="50dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/nunito"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:text="Username"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarAjustes"
            app:layout_constraintVertical_bias="0.104" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Nombre de usuario"
            android:textColor="#C6BDBD"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.297"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameAjustes"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/playButton"
            android:stateListAnimator="@null"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:backgroundTint="#FFB703"
            android:fontFamily="@font/nunito"
            android:text="Cerrar sesiÃ³n"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateButton"
            app:layout_constraintVertical_bias="0.291" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:backgroundTint="#FFB703"
            android:fontFamily="@font/nunito"
            android:text="Actualizar"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.248" />

        <ImageView
            android:id="@+id/editAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/avatarAjustes"
            app:layout_constraintEnd_toEndOf="@+id/avatarAjustes"
            app:layout_constraintHorizontal_bias="0.878"
            app:layout_constraintStart_toStartOf="@+id/avatarAjustes"
            app:layout_constraintTop_toTopOf="@+id/avatarAjustes"
            app:layout_constraintVertical_bias="0.834"
            app:srcCompat="@drawable/edit"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/usernameAjustes"
            app:layout_constraintEnd_toEndOf="@+id/usernameAjustes"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/usernameAjustes"
            app:layout_constraintTop_toTopOf="@+id/usernameAjustes"
            app:layout_constraintVertical_bias="0.2"
            app:srcCompat="@drawable/edit" />

        <include
            android:id="@+id/avatarMenu"
            layout="@layout/choose_avatar_layout"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>